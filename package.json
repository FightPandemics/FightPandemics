{
  "name": "fightpandemics",
  "author": "Fight Pandemics",
  "license": "ISC",
  "version": "1.0.0",
  "description": "Help to fight global pandemics",
  "scripts": {
    "install:client": "cd client && npm install",
    "install:backend": "cd backend && npm install",
    "postinstall": "npm-run-all install:*",
    "precommit:client": "cd client && npm run precommit",
    "precommit:backend": "cd backend && npm run precommit",
    "precommit": "npm-run-all precommit:*"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:FightPandemics/FightPandemics.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit"
    }
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5"
  }
}
